@inject NavigationManager NavManager

<MudGrid Justify="Justify.Center" Class="mb-15">
        <MudItem xs="12">
            <MudPaper Elevation="2" Class="p-2 mt-4">
                @EnergyChart
            </MudPaper>
        </MudItem>
        <MudItem xs="12">
            <MudPaper Elevation="2" Class="p-2">
                <Toolbar IsPrimaryHeatingSource="PrimaryHeatSource" MeterType="MeterType"></Toolbar>
            </MudPaper>
        </MudItem>
        @Summary
    
</MudGrid>

@code {

    [Parameter, EditorRequired]
    public RenderFragment EnergyChart { get; set; }

    [Parameter, EditorRequired]
    public RenderFragment Summary { get; set; }

    [Parameter, EditorRequired] 
    public MeterType MeterType { get; set; }
    
    [Parameter, EditorRequired]
    public bool PrimaryHeatSource { get; set; }

    

}