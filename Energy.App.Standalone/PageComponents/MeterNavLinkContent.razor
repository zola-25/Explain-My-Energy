@if (IsHeating)
{
    <MudPaper Elevation="0" Style="background-color: inherit" Class="d-flex justify-space-between">
        @ChildContent <MudIcon Class="mud-nav-link-icon mud-nav-link-icon-default" Icon="@Icons.Material.Filled.Thermostat"></MudIcon>
    </MudPaper>
}
else
{
    @ChildContent
}

@code {
    [Parameter, EditorRequired] public bool IsHeating { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
}
